{# app/Resources/views/index_base.html.twig #}

{# For clearer view #}
{% set route = app.request.attributes.get( '_route' ) %}

<!DOCTYPE html>

<!-- BEGIN HEAD -->
<head id="website_head">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>
      {% block title %}
        Deo Volente
      {% endblock %}
    </title>

    <link rel="icon" type="image/ico" href="{{ asset('favicon.ico') }}" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <meta content="Pierre-Arnaud Destremau" name="author"/>
    <meta content="deovolente@deovolentesrl.com" name="email"/>
    <meta content="Deo Volente" name="title"/>
    <meta content="Deo Volente. Construccion en Cusco. Estructuras metalicas. Empresa de voladuras y estructuras metalicas en Cusco. www.deovolentesrl.com o deovolente.com.pe" name="description"/>
    <meta content="http://www.deovolentesrl.com{{ asset('img/system/logo/logo-300x300.png') }}" name="image"/>
    <meta content="Jr. Espinar I - 18 Urb. Progreso Wanchaq â€“ Cusco" name="streetAddress"/>
    <meta content="Cusco" name="addressLocality"/>
    <meta content="Cuzco" name="addressRegion"/>
    <meta content="Peru" name="addressCountry"/>
    <meta name="keywords" content="Deo, Volente, Construccion, Estructuras, metalicas, Empresa, voladuras, www.deovolentesrl.com, deovolente.com.pe, cusco, peru"/>

    <!-- Facebook -->
    <meta property="og:title" content="Deo Volente"/>
    <meta property="og:email" content="deovolente@deovolentesrl.com"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="http://www.deovolentesrl.com{{ asset('img/system/logo/logo-300x300.png') }}"/>
    <meta property="og:url" content="http://www.deovolentesrl.com/"/>
    <meta property="og:description" content="Deo Volente. Construccion en Cusco. Estructuras metalicas. Empresa de voladuras y estructuras metalicas en Cusco. www.deovolentesrl.com o deovolente.com.pe"/>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    {% stylesheets
      'css/font.css'
      'css/main_style.css'
      %} <!-- filter='cssrewrite'  -->
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen"/>
    {% endstylesheets %}

    {% if route == 'dv_user_pagina_nueva'
      or route == 'dv_user_pagina_modif' %}
      {% stylesheets
        'redactor/redactor.css'
        'bundles/stpredactor/css/sonata.css'
        %} <!-- filter='cssrewrite'  -->
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen"/>
      {% endstylesheets %}
      {% javascripts 
        'redactor/redactor.js'
        'redactor/fullscreen.js'
        'bundles/stpredactor/js/script.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"> </script>
      {% endjavascripts %}
    {% endif %}

</head>
<!-- END HEAD -->

<!-- BEGIN BODY -->
  <body>

    {% set route = app.request.attributes.get( '_route' ) %}

    <!-- BEGIN header -->
      {% if route == 'dv_main_homepage'
        or route == 'dv_main_nosotros'
        or route == 'dv_main_servicios'
        or route == 'dv_main_proyectos'
        or route == 'dv_main_clientes'
        or route == 'dv_main_rse'
        or route == 'dv_main_fotos'
        or route == 'dv_main_contact'
        or route == 'dv_main_contact_enviar'
        or route == 'dv_main_contact_enviado' %}
        {% include 'includes/header.html.twig' %}
      {% else %}
        {% include 'includes/nav_admin.html.twig' %}
      {% endif %}
    <!-- END header -->

    <!-- BEGIN CONTAINER -->
    <div id="page_container_gen" class="row margin0">
        {% block body %}
        {% endblock body %} 
    </div>
    <!-- END CONTAINER -->

    <!-- BEGIN FOOTER -->
      {% if route == 'dv_main_homepage'
        or route == 'dv_main_nosotros'
        or route == 'dv_main_servicios'
        or route == 'dv_main_proyectos'
        or route == 'dv_main_clientes'
        or route == 'dv_main_rse'
        or route == 'dv_main_fotos'
        or route == 'dv_main_contact'
        or route == 'dv_main_contact_enviar'
        or route == 'dv_main_contact_enviado' %}
        {% include 'includes/footer.html.twig' %}
      {% endif %}
    <!-- END FOOTER -->


    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    {% javascripts 
      'js/jssor.js'
      'js/jssor.slider.js'
      'js/javascripts_deoVolente.js'
      %}
      <script type="text/javascript" src="{{ asset_url }}"> </script>
    {% endjavascripts %}
    <!-- END JAVASCRIPTS -->

  </body>
  <!-- END BODY -->
</html>