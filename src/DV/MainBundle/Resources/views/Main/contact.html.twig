{# src/DV/MainBundle/Resources/Main/contact.html.twig #}

{% extends "DVMainBundle::main_general.html.twig" %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block DV_Main_body %}

	<!-- BEGIN CONTENT -->
	<div id="page_toLoad" class="row" style="width: 100%; background-image: url('{{ asset( 'img/bg_paginas/servicios.jpg') }}'); background-size: cover; background-position: 50%; " alt="alt">

		<div id="sessionFlash" class="sessionFlash">
		</div>

		<div id="page_content">

			<div class="row txt_sobre_img">
				<h3>
					CONTÁCTENOS
				</h3>

				<hr class="medium_hr row60"/>
				<br/>

				<div class="row">

					<p class="center">
						Para preguntarnos algun presupuesto, o pedirnos informaciones sobre tal o tal proyecto, envienos un mensaje por favor:
					</p>


					<form id="contact_form" method="post" action="{{ path('dv_main_contact_enviar') }}">
						<div class="row">
					        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="form-group">
									<div class="input-icon">
										<input type="text" name="senderContact" id="senderContact" placeholder="Nombre" class="form-control placeholder-no-fix"/>
							        </div>
							    </div>
							    <div class="form-group">
									<div class="input-icon">
										<input type="email" name="emailContact" id="emailContact" placeholder="Email" class="form-control placeholder-no-fix"/>
							        </div>
								</div>
								<div class="form-group">
									<div class="input-icon">
										<input type="text" name="celContact" id="celContact" placeholder="Celular" class="form-control placeholder-no-fix"/>
							        </div>
								</div>
								<div class="form-group">
									<div class="input-icon">
										<input type="text" name="paisContact" id="paisContact" placeholder="País" class="form-control placeholder-no-fix"/>
							        </div>
								</div>
					            <div class="form-group">
					                <div class="input-icon">
					                	<textarea class="form-control placeholder-no-fix" name="corpsMail" id="corpsMail" placeholder="Mensaje" rows="8"></textarea>
					                </div>
					            </div>
								<br/>
								<div class="center">
							        <button type="submit" class="btn btn-perso">
							        	Enviar
							        </button>
								</div>

								<br/><br/>
					        </div>

					        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					        	<!-- 16:9 aspect ratio -->
								<div class="embed-responsive embed-responsive-16by9">
								  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1939.5590721306926!2d-71.9594016!3d-13.52834039999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x916dd5fa4c074a3b%3A0x5a1eb144ef4cc219!2sJr.+Espinar+K-20%2C+Cusco%2C+Per%C3%BA!5e0!3m2!1ses-419!2sfr!4v1443479105754" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
								</div>
					        </div>
						</div>
				    </form>
				</div>
				

				<br/><br/>
			</div>	
		</div>

	</div>
	<!-- END CONTENT -->

{% endblock DV_Main_body %}